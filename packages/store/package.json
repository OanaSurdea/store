{
  "$schema": "../../node_modules/ng-packagr/package.schema.json",
  "name": "@ngxs/store",
  "version": "0.0.0",
  "license": "MIT",
  "sideEffects": true,
  "peerDependencies": {
    "@angular/core": ">=6.1.0 <16.0.0",
    "rxjs": ">=6.5.5"
  },
  "ngPackage": {
    "lib": {
      "flatModuleFile": "ngxs-store",
      "entryFile": "index.ts",
      "umdModuleIds": {
        "@ngxs/store/internals": "ngxs-store-internals",
        "@ngxs/store/operators": "ngxs-store-operators"
      }
    },
    "dest": "../../@ngxs/store"
  },
  "schematics": "./schematics/collection.json",
  "scripts": {
    "build": "../../node_modules/.bin/tsc -p tsconfig.schematics.json",
    "copy:schemas": "cp --parents schematics/factories/*/schema.json ../../@ngxs/store/",
    "copy:files": "cp --parents -p -r schematics/templates/** ../../@ngxs/store/",
    "copy:collection": "cp schematics/collection.json ../../@ngxs/store/schematics/collection.json",
    "postbuild": "yarn run copy:schemas && yarn run copy:files && yarn run copy:collection"
  }
}
